###############################################################################
#
# HOSTS.CFG - Generated by Chef - local changes will be overwritten
#
# This config file provides host definitions for all configured hosts.
#       
###############################################################################

<% @hosts.each do |host| -%>

define host {
	<% host.each do |k,v| -%>
	<%= "#{k}	#{v}" %>
	<% end %>
}

<% end -%>

<% @hostgroups.each do |hostgroup| -%>

define hostgroup {
	<% hostgroup.each do |k,v| -%>
	<%= "#{k}	#{v}" %>
	<% end %>
}

<% end -%>
