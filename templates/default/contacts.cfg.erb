###############################################################################
#
# CONTACTS.CFG - Generated by Chef - local changes will be overwritten
#
# This config file provides contact and contact group definitions
# that can be referenced in host and service definitions.
#       
###############################################################################

<% @contacts.each do |contact| -%>

define contact {
	<% contact.each do |k,v| -%>
	<%= "#{k}	#{v}" %>
	<% end %>
}

<% end -%>

<% @contactgroups.each do |contactgroup| -%>

define contactgroup {
	<% contactgroup.each do |k,v| -%>
	<%= "#{k}	#{v}" %>
	<% end %>
}

<% end -%>
